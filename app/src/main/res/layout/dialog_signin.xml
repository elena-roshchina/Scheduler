<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/user_login_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/enter_login_dialog"/>
    <EditText
        android:id="@+id/user_pswd_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="@string/enter_password_dialog"/>
    <Button
        android:id="@+id/forget_pass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/sendpassbutton"
        android:textSize="12sp" />

</LinearLayout>
